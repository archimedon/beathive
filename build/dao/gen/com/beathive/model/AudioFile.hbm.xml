<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping

>

    <class
            name="com.beathive.model.AudioFile"
            table="audiofile"
    >

    <id
        name="id"
            column="id"
            unsaved-value="null"
    >

    <!-- The generator-class attribute of @hibernate.id is deprecated, use the @hibernate.generator tag instead -->
    <generator class="native">

    </generator>

    </id>

        <property
            name="clipId"
                    column="clipId"
        >

        </property>

        <property
            name="storeId"
                    column="storeId"
        >

        </property>

        <property
            name="samplePath"
                    column="samplePath"
        >

        </property>

        <property
            name="fileRef"
                    column="fileRef"
        >

        </property>

        <property
            name="formatId"
                    column="formatId"
        >

        </property>

        <property
            name="sampleSize"
                    column="sampleSize"
        >

        </property>

        <property
            name="sampleRate"
                    column="sampleRate"
        >

        </property>

        <property
            name="checkSum"
                    column="checkSum"
                not-null="true"
                unique="true"
        >

        </property>

    </class>    

</hibernate-mapping>

